@using homework3_4Data
@model SimchosViewModel
@{
    ViewData["Title"] = "Home Page";
}

<html>
    <body>
<div b-2ya7vgwtda class="container">
        <main b-2ya7vgwtda role="main" class="pb-3" style="margin-top: 60px;">
            
<div class="header">
    <h1>Simchos</h1>
</div>
<div class="row header">
    <div class="col-md-4">
        <button class="btn btn btn-danger" id="new-simcha">New Simcha</button>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Contributions</th>
            <th>Simcha Name</th>
            <th>Contributor Count</th>
            <th>Total</th>
            <th>Date</th>
        </tr>
        @foreach(Simcha s in Model.Simchos)
                    {
                        <tr>
                            <td><a class="btn btn-primary" href="/home/contributions?id=@s.Id">Contributions</a> </td>
                            <td>@s.Name</td>
                            <td>
                                 @s.ContributorCount / @Model.ContributorCount
                            </td>
                            <td>@s.Total.ToString("C")</td>
                            <td>@s.Date.ToShortDateString()</td>
                        </tr>
                    }
                    </table>
</div>

<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Simcha</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/home/new">
                    <div class="form-group">
                        <label class="form-label">Simcha Name</label>
                        <input class="form-control" name="name" placeholder="Simcha Name" type="text">
                    </div>
                    <div class="form-group mt-3">
                        <label class="form-label">Date</label>
                        <input type="date" name="date" class="form-control" id="datepicker">
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" name="commit">Save</button>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

        </main>
    </div>

    @section Scripts {
        <script src="/js/simcha-index.js"></script>
    }
    
    

</body>
</html>
